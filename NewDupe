local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "MM2 Dupe | OGDuper", HidePremium = false, SaveConfig = false, ConfigFolder = "OrionTest"})
local Tab = Window:MakeTab({
	Name = "Main",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

local Section = Tab:AddSection({
	Name = "Dupe"
})

OrionLib:MakeNotification({
	Name = "Success!",
	Content = "Execute Success",
	Image = "rbxassetid://4483345998",
	Time = 5
})

local weaponName = ""
local amount = 35

Tab:AddTextbox({
	Name = "Weapon For Dupe",
	Default = "Example: Harvester",
	TextDisappear = false,
	Callback = function(Value)
		weaponName = Value
	end	  
})

Tab:AddSlider({
	Name = "Amount",
	Min = 5,
	Max = 75,
	Default = 35,
	Color = Color3.new(1.000000, 0.000000, 0.749020),
	Increment = 1,
	ValueName = "Amount",
	Callback = function(Value)
		amount = Value
	end    
})

Tab:AddButton({
	Name = "Start!",
	Callback = function()
      		print("button pressed")
			
			local player = game:GetService("Players").Aeratens77306
			local textLabel = player.PlayerGui.MainGUI.Game.Inventory.Main.Weapons.Items.Container.Holiday.Container.Christmas.Container.NewItem11.Container.Amount
			local count = 0

			while count < amount do
				count = count + 1
				textLabel.Text = "x" .. tostring(count)
				wait(1) -- Ждём 1 секунду
			end
  	end    
})
